{
    "Method Extension": {
        "prefix": "extensionMethod",
        "body": [
            "extension ${1:ExtensionName} on ${2:Type} {",
            "  ${3:ReturnType} ${4:methodName}() {",
            "    return $0",
            "  }",
            "}"
        ],
        "description": "Create a method extension"
    },
    "Property Extension": {
        "prefix": "extensionProp",
        "body": [
            "extension ${1:ExtensionName} on ${2:Type} {",
            "  ${3:ReturnType} get ${4:propertyName} {",
            "    return $0",
            "  }",
            "}"
        ],
        "description": "Create a property extension"
    },
    "Operator Extension": {
        "prefix": "extensionOperator",
        "body": [
            "extension ${1:ExtensionName} on ${2:Type} {",
            "  ${3:ReturnType} operator ${4:ReturnType}($2 other) {",
            "    return $0",
            "  }",
            "}"
        ],
        "description": "Create an operator extension"
    }
}