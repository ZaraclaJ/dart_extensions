{
    "Extension method": {
        "prefix": "extensionMethod",
        "body": [
            "extension ${1:ExtensionName} on ${2:Type} {",
            "  ${3:ReturnType} ${4:methodName}() {",
            "    return $0",
            "  }",
            "}"
        ],
        "description": "Create an extension method"
    },
    "Extension property": {
        "prefix": "extensionProp",
        "body": [
            "extension ${1:ExtensionName} on ${2:Type} {",
            "  ${3:ReturnType} get ${4:propertyName} {",
            "    return $0",
            "  }",
            "}"
        ],
        "description": "Create an extension property"
    },
    "Extension operator": {
        "prefix": "extensionOperator",
        "body": [
            "extension ${1:ExtensionName} on ${2:Type} {",
            "  ${3:ReturnType} operator ${4:ReturnType}($2 other) {",
            "    return $0",
            "  }",
            "}"
        ],
        "description": "Create an extension operator"
    }
}